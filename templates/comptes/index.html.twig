{% extends 'base.html.twig' %}

{% block title %}Comptes index{% endblock %}

{% block body %}
    <h1>Comptes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumCompte</th>
                <th>Intitule</th>
                <th>SoldeCourant</th>
                <th>TypeCompte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.numCompte }}</td>
                <td>{{ compte.intitule }}</td>
                <td>{{ compte.soldeCourant }}</td>
                <td>{{ compte.typeCompte }}</td>
                <td>
                    <a href="{{ path('comptes_show', {'id': compte.id}) }}">show</a>
                    <a href="{{ path('comptes_edit', {'id': compte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comptes_new') }}">Create new</a>
{% endblock %}