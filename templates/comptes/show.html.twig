{% extends 'base.html.twig' %}

{% block title %}Details du Compte{% endblock %}

{% block body %}
    <h1>Compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte.id }}</td>
            </tr>
            <tr>
                <th>NumCompte</th>
                <td>{{ compte.numCompte }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ compte.intitule }}</td>
            </tr>
            <tr>
                <th>SoldeCourant</th>
                <td>{{ compte.soldeCourant|number_format(0, '.', ' ') }}</td>
            </tr>
            <tr>
                <th>TypeCompte</th>
                <td>{{ compte.typeCompte }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-inline"><a href="{{ path('comptes_index') }}">Liste des comptes</a> ||

    <a href="{{ path('comptes_edit', {'id': compte.id}) }}">Modifier</a> ||

    {{ include('comptes/_delete_form.html.twig') }}
    </div>
    <h1>Extraits des 10 derniers mouvements | <a href="{{ path('compta_grand_livre_specific',{'id': compte.id}) }}"> Voir plus</a></h1>

    {{ include('compta/_detail_grand_livre.html.twig') }}

{% endblock %}