                <td>{{ collaborateur.nbEnfant }}</td>
                <td>{{ collaborateur.categorie }}</td>
                <td>{{ collaborateur.nSecuriteSociale }}</td>
                <td>{{ collaborateur.mSalaireBase }}</td>
                <td>{{ collaborateur.mIndemLogement }}</td>
                <td>{{ collaborateur.mIndemTransport }}</td>
                <td>{{ collaborateur.mIndemFonction }}</td>
