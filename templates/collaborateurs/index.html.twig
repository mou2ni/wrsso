                <td>{{ collaborateur.mSecuriteSocialeSalarie }}</td>
                <td>{{ collaborateur.mSecuriteSocialePatronale }}</td>
                <td>{{ collaborateur.mImpotSalarie }}</td>
                <td>{{ collaborateur.mTaxePatronale }}</td>
                <td>
                    <a href="{{ path('collaborateurs_show', {'id': collaborateur.id}) }}">show</a>
