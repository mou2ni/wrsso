<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Partenaires</th>
        <th class="text-right">Montant</th>
        <th>Status</th>
        <th>Observations</th>
        {% if journeeCaisse.statut=='E' %}<th>Action</th>{% endif %}
        {% if  is_granted('ROLE_COMPTABLE') %}<th>Pièces</th>{% endif %}
    </tr>
    </thead>
    <tbody>
    <tr>
        <th colspan="6" class="text-center">APPROVISIONNEMENT RECU </th>
    </tr>
    {% for approVersement in journeeCaisse.approVersementEntrants  %}
        {{ include('appro_versements/_ligne_list.html.twig') }}
    {% else %}
        <tr> <td colspan="6" class="text-center"> Aucun Appro </td></tr>
    {% endfor %}
    <tr><th>Total Validé</th>
        <th class="text-right">{{ (journeeCaisse.mApproVersementEntrant)|number_format(0, '.', ' ') }}</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <tr>
        <th colspan="6" class="text-center">APPROVISIONNEMENT VERSE </th>
    </tr>
    {% for approVersement in journeeCaisse.approVersementSortants  %}
        {{ include('appro_versements/_ligne_list.html.twig') }}
    {% else %}
        <tr> <td colspan="6" class="text-center"> Aucun Versement </td></tr>
    {% endfor %}
    <tr><th>Total Validé</th>
        <th class="text-right">{{ (journeeCaisse.mApproVersementSortant)|number_format(0, '.', ' ') }}</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </tbody>
</table>
