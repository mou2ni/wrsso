<table class="table">
    <thead>
    <tr>
        <th>Date Création</th>
        <th>Libellé</th>
        <th>Montant Crédit</th>
        <th>Montant Dette</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <td></td>
    <th>Totaux </th>
        {% if operation == 'OUVRIR' %}<th>{{ journeeCaisse.mCreditDiversOuv|number_format(0, '.', ' ') }}</th>
            <th>{{ journeeCaisse.mDetteDiversOuv|number_format(0, '.', ' ') }}</th>{% else %}
            <th>{{ journeeCaisse.mCreditDiversFerm|number_format(0, '.', ' ') }}</th>
            <th>{{ journeeCaisse.mDetteDiversFerm|number_format(0, '.', ' ') }}</th>{% endif %}
    </tr>
    {% for dette_credit_diver in journeeCaisse.detteCredits %}
        {% if dette_credit_diver.statut in ['C','D'] %}
        <tr>

            <td>{{ dette_credit_diver.dateCreation ? dette_credit_diver.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ dette_credit_diver.libelle }}</td>
            <td>{{ dette_credit_diver.mCredit|number_format(0, '.', ' ') }}</td>
            <td>{{ dette_credit_diver.mDette|number_format(0, '.', ' ') }}</td>
            <td>
                {{ include('dette_credit_divers/_btn_action_url.html.twig',{'path':'dette_credit_divers_rembourser', 'operation':'FERMER' ,'btn_name':'rembourser', 'btn_label':'Rembourser'}) }}
            </td>
        </tr>
        {% endif %}
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
