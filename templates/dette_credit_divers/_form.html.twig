{{ form_start(form, {'attr': {'onsubmit':'return confirm("Voulez vous continuer ?");'} } ) }}
<table class="table" onload="reset()">
    <tr>
        <td>Operation</td><td>
            {{ form_widget(form.operation) }}
                {#<input id="chbxCredit" type="radio" name="operation" value="credit" checked="checked"> Credit
                <input id="chbxDette" type="radio" name="operation" value="dette"> Dette#}
        </td>
    </tr>
    <tr id="credit">
        <td>Montant Credit</td><td>{{ form_widget(form.montant) }} {{ form_errors(form.montant) }}</td>
    </tr>
    {#<tr id="dette">
        <td>Montant Dette</td><td>{{ form_widget(form.mDette) }}{{ form_errors(form.mDette) }}</td>
    </tr>#}
    <tr>
        <td>Commentaire</td><td>{{ form_widget(form.libelle) }}</td><td></td>
    </tr>
</table>
{% if journeeCaisse.statut!="F" %}
<button class="btn-primary btn" name="enregistrer" id="enregistrer">{{ button_label|default('Enregistrer et Nouveau') }}</button>
<button class="btn-primary btn" name="enregistreretfermer" id="enregistreretfermer">{{ button_label|default('Enregistrer et Fermer') }}</button>
{% endif %}
<input type="hidden" name="_operation" value="{{ operation }}">
{{ form_end(form) }}
{% if journeeCaisse.statut=="O" %}
    <div class="form-inline">
        {{ include('journee_caisses/_btn_action_url.html.twig',{'path':'journee_caisses_gerer','btn_name':'femer', 'btn_label':'FERMER'}) }}
    </div>
{% elseif journeeCaisse.statut=="I" %}
    <div class="form-inline">
        {{ include('journee_caisses/_btn_action_url.html.twig',{'path':'journee_caisses_ouvrir','btn_name':'femer', 'btn_label':'FERMER'}) }}
    </div>
{% elseif journeeCaisse.statut=="F" %}
    <div class="form-inline">
        {{ include('journee_caisses/_btn_action_url.html.twig',{'path':'journee_caisses_show','btn_name':'femer', 'btn_label':'FERMER'}) }}
    </div>
{% endif %}
