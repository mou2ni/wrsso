{% extends 'base.html.twig' %}

{% block title %}Zones index{% endblock %}

{% block body %}
    <h1>Liste des Zones | Ajouter : <a href="{{ path('zones_new') }}"> Une Zone</a> | <a href="{{ path('pays_new') }}"> Un Pays</a></h1>

    {{ include('_pagination.html.twig') }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.libelle }}</td>
                <td>{{ zone.code }}</td>
                <td>{{ zone.ordre }}</td>
                <td>
                    <a href="{{ path('zones_show', {'id': zone.id}) }}">Details</a> |
                    <a href="{{ path('zones_edit', {'id': zone.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
