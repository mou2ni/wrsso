<div class="modal fade" id="{{ modal_id }}" tabindex="-1" role="dialog" aria-labelledby="modal-default-header" data-backdrop="static">
    <div class="modal-primary modal-dialog" role="document">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="icon-cross"></span></button>

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-default-header">{{ titre }}</h4>
            </div>
            <div class="modal-body">
               {{include(modal_form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-default">Submit</button>
            </div>
        </div>
    </div>
</div>