<form class="form-inline" method="POST" action="{{ path(path,{'id': id})}}" onsubmit="return confirm('{{ confirm_message }} ');">
    <input type="hidden" name="_method" value="UPDATE">
    <input type="hidden" name="_token" value="{{ csrf_token('update'~id)}}">
    <button class="{{ btn_class|default("btn-info") }}" name={{ btn_name }}>{{ btn_label }}</button>
</form>