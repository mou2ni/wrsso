<div class="form-inline">
    {{ include('journee_caisses/_btn_action_url_initialiser.html.twig',{'path':'journee_caisses_initialiser' , 'operation':'initialiser','btn_name':'initialise', 'btn_label':'Initialiser'}) }}
</div>

<div class="">
    <div class="col-lg-4" hidden>
        <h3>O</h3>

        <div class="">
            <div class="form-control">Liquidité</div>

        </div>
        <div class="form-inline">
            <div class="form-control">Solde electronique
            </div>
        </div>
        <div class="form-inline">
            <div class="form-control">Dettes Divers
            </div>
        </div>
        <div class="form-inline">
            <div class="form-control">Credits divers
            </div>
        </div>
        ===================
        <div class="form-inline">
            <div class="form-control">Disponibilité
            </div>
        </div>
        <div class="form-inline">
            <div class="form-control">Solde Net
            </div>
        </div>
        <div class="form-inline">
            <div class="form-control">Ecart
            </div>
        </div>

        ===================
        <div class="row">
            <div class="col">
                {% for deviseJournee in form.deviseJournees %}
                    <div class="form-inline">
                        <div class="">{{ form_widget(deviseJournee.devise) }}
                        </div>
                    </div>

                {% else %}
                    Aucune devise
                {% endfor %}
            </div>

        </div>


    </div>
    <div class="">
        <table>
            <thead><tr><th colspan="2" > <h3>Fermeture précédente</h3> </th><th colspan="2"> <h3>Ouverture</h3> </th></tr></thead>
            <tbody>
            <tr >
                <td>Liquidité : </td>
                <td > {{ journeePrecedente ? journeePrecedente.mLiquiditeFerm : 0}}</td>
                <td > {{ form_widget(form.mLiquiditeOuv) }}</td>
                <td>{{ journeeCaisse.billetOuv.id ? include('journee_caisses/_btn_action_billetage.html.twig',{'id':journeeCaisse.billetOuv.id, 'operation':'OUVER', 'devise':0,'btn_name':'Billetage', 'btn_label':'Billetage'}) }}</td>

            </tr>
            <tr >
                <td>Electronique : </td>
                <td > {{ journeePrecedente ? journeePrecedente.mSoldeElectFerm : 0}}</td>
                <td > {{ form_widget(form.mSoldeElectOuv) }}</td>
                <td>{{ journeeCaisse.systemElectInventOuv.id ? include('journee_caisses/_btn_action_elect.html.twig',{'id':journeeCaisse.systemElectInventOuv.id, 'operation':'OUVRIR', 'btn_name':'Solde', 'btn_label':'Solde'}) }}</td>
            </tr>
            <tr >
                <td>Dettes Divers : </td>
                <td > {{ journeePrecedente ? journeePrecedente.mDetteDiversFerm : "0"}}</td>
                <td > {{ form_widget(form.mDetteDiversOuv) }}</td>
            </tr>
            <tr >
                <td>Credits Divers : </td>
                <td > {{ journeePrecedente ? journeePrecedente.mCreditDiversFerm : 0}}</td>
                <td>{{ form_widget(form.mCreditDiversOuv) }}</td>
            </tr>
            <tr >
                <td colspan="2">=================== </td>
                <td colspan="2">=================== </td>
            </tr>
            <tr >
                <td>Disponibilité : </td>
                <td > {{ journeePrecedente ? journeePrecedente.disponibiliteFerm : 0}}</td>
                <td > {{ journeeCaisse.disponibiliteOuv }}</td>
            </tr>
            <tr >
                <td>Solde Net : </td>
                <td > {{ journeePrecedente ? journeePrecedente.soldeNetFerm : 0}}</td>
                <td > {{ journeeCaisse.soldeNetOuv }}</td>
            </tr>
            <tr >
                <td>Ecart : </td><td></td><td>{{ form_widget(form.mEcartOuv) }}</td>
            </tr>
            <tr >
                <td colspan="2">=================== </td>
                <td colspan="2">=================== </td>
            </tr>
            <tr >
                <th>Devise </th>
                <th>Ecart </th>
                <th>Devise </th>
                <th>Ecart </th>
            </tr>

            {% set devises = 0 %}
            {% for deviseJournee in form.deviseJournees %}
                {% set index2=loop.index %}
                {% for deviseJournee1 in journeeCaisse.deviseJournees %}
                    {% set index1=loop.index %}
                    {% set devise=deviseJournee1.billetOuv.id  %}
                    {% set deviseid=deviseJournee1.devise.id  %}
                    {% if index1==index2 %}
                        <tr >
                            <td>{{ deviseJournee1.devise.code }} </td>
                            <td >{{ deviseJournee1.qteFerm }} </td>
                            <td>{{ form_widget(deviseJournee.billetOuv) }}</td>
                            <td >{{ form_widget(deviseJournee.ecartOuv) }}</td>
                            <td>{{ journeeCaisse.id ? include('journee_caisses/_btn_action_billetage.html.twig',{'id':devise,'operation':'OUVRIR', 'devise':deviseid,'btn_name':'Billetage', 'btn_label':'Billetage'}) }}</td>

                        </tr>
                    {% endif %}
                {% endfor %}

            {% else %}
                <tr >
                    <td colspan="2">Aucune devise </td>
                    <td colspan="2">Aucune devise </td>
                </tr>
            {% endfor %}

            {#{% else %}
                <tr >
                    <td colspan="2">Pas de journée précedente </td>
                </tr>
            {% endif %}


            {% if journeePrecedente %}
                {% for deviseJournee in journeePrecedente.deviseJournees %}
                    <tr >
                        <td>{{ deviseJournee.devise.code }} </td>
                        <td >{{ deviseJournee.qteFerm }} </td>
                        <td></td>
                        <td></td>
                    </tr>

                {% else %}
                    <tr >
                        <td colspan="2">Aucune devise </td>
                        <td colspan="2">Aucune devise </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr >
                    <td colspan="2">Pas de journée précedente </td>
                </tr>
            {% endif %}#}
            </tbody>
        </table>
    </div>
    <div class="col-lg-4" hidden>
        <table>
            <thead><tr><th colspan="3"> <h3>Ouverture Caisse</h3> </th></tr></thead>
            <tbody>
            <tr >
                <td>Liquidité : </td>
                <td > {{ form_widget(form.mLiquiditeOuv) }}</td>
                <td>{{ journeeCaisse.billetOuv.id ? include('journee_caisses/_btn_action_billetage.html.twig',{'id':journeeCaisse.billetOuv.id, 'operation':'OUVER', 'devise':0,'btn_name':'Billetage', 'btn_label':'Billetage'}) }}</td>
            </tr>
            <tr >
                <td>Electronique : </td>
                <td > {{ form_widget(form.mSoldeElectOuv) }}</td>
                <td>{{ journeeCaisse.systemElectInventOuv.id ? include('journee_caisses/_btn_action_elect.html.twig',{'id':journeeCaisse.systemElectInventOuv.id, 'operation':'OUVRIR', 'btn_name':'Solde', 'btn_label':'Solde'}) }}</td>

            </tr>
            <tr >
                <td>Dettes Divers : </td>
                <td > {{ form_widget(form.mDetteDiversOuv) }}</td>

            </tr>
            <tr>
                <td>Credits Divers : </td><td>{{ form_widget(form.mCreditDiversOuv) }}</td>
            </tr>
            <tr >
                <td colspan="2">=================== </td>
            </tr>
            <tr >
                <td>Disponibilité : </td><td > {{ journeeCaisse.disponibiliteOuv }}</td>
            </tr>
            <tr >
                <td>Solde Net : </td><td > {{ journeeCaisse.soldeNetOuv }}</td>
            </tr>
            <tr >
                <td>Ecart : </td><td>{{ form_widget(form.mEcartOuv) }}</td>
            </tr>
            <tr >
                <td colspan="2">=================== </td>
            </tr>
            <tr >
                <th>Devise </th>
                <th>Ecart </th>
            </tr>

            {% set devises = 0 %}
            {% for deviseJournee in form.deviseJournees %}
                {% set index2=loop.index %}
                {% for deviseJournee1 in journeeCaisse.deviseJournees %}
                    {% set index1=loop.index %}
                    {% set devise=deviseJournee1.billetOuv.id  %}
                    {% set deviseid=deviseJournee1.devise.id  %}
                    {% if index1==index2 %}
                        <tr >
                            <td>{{ form_widget(deviseJournee.billetOuv) }}</td>
                            <td >{{ form_widget(deviseJournee.ecartOuv) }}</td>

                            <td>{{ journeeCaisse.id ? include('journee_caisses/_btn_action_billetage.html.twig',{'id':devise,'operation':'OUVRIR', 'devise':deviseid,'btn_name':'Billetage', 'btn_label':'Billetage'}) }}</td>

                        </tr>
                    {% endif %}


                {% endfor %}

            {% else %}
                Aucune devise
            {% endfor %}

            </tbody>
        </table>
    </div>
    <div class="form-inline">
        {{ include('journee_caisses/_btn_action_url.html.twig',{'path':'journee_caisses_enregistrer' , 'operation':'OUVRIR','btn_name':'submit', 'btn_label':'Ouvrir la caisse'}) }}
    </div>
</div>
