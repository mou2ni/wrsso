<form class="form-inline" method="POST" action="{{ (journeeCaisse.statut != 'X')?path('billetages_ajout', {'id': id, 'devise': devise, 'operation': operation, 'dt':dt}):path('billetages_show', {'id': id, 'devise': devise, 'operation': operation, 'dt':dt })}}">
    <input type="hidden" name="_method" value="UPDATE">
    {#<input type="hidden" name="_operation" value="{{ operation }}">#}
    <input type="hidden" name="_token" value="{{ csrf_token('billetage' ~ id)}}">
    <input type="hidden" name="_journeeCaisse" value="{{ journeeCaisse.id }}">
    <button class="{{ btn_class|default('btn-info') }}" name={{ btn_name }}>{{ btn_label }}</button>
</form>