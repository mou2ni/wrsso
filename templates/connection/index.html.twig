{% extends 'base.html.twig' %}
{% block title %}login{% endblock %}
{% block body %}
{% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
{% if error %}
        <div>{{ error }}</div>
    {% endif %}
