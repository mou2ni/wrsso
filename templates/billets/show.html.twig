{% extends 'base.html.twig' %}

{% block title %}Billets{% endblock %}

{% block body %}
    <h1>Billets</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ billet.id }}</td>
        </tr>
        <tr>
            <th>Valeur</th>
            <td>{{ billet.valeur }}</td>
        </tr>
        <tr>
                <th>Status</th>
                <td>{{ (billet.isActive)?'Actif':'Desactivé' }}</td>
            </tr>
        <tr>
            <th>Devise</th>
            <td>{{ (billet.devise)?billet.devise:'XOF' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('billets_index') }}">Retour à la liste</a>

    <a href="{{ path('billets_edit', {'id': billet.id}) }}">Modifier</a>

    {{ include('billets/_delete_form.html.twig') }}
{% endblock %}