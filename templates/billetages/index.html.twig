{% extends 'base.html.twig' %}

{% block title %}Billetages index{% endblock %}

{% block body %}
    <h1>Billetages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ValeurTotal</th>
                <th>DateBillettage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billetage in billetages %}
            <tr>
                <td>{{ billetage.id }}</td>
                <td>{{ billetage.valeurTotal }}</td>
                <td>{{ billetage.dateBillettage ? billetage.dateBillettage|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('billetages_show', {'id': billetage.id}) }}">show</a>
                    <a href="{{ path('billetages_edit', {'id': billetage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('billetages_new') }}">Create new</a>
{% endblock %}